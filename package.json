{
    "name": "go-node-ffi",
    "version": "3.0.0",
    "description": "An experiment using Go 1.5 buildmode to compile shared C libraries, and to subsequently access them through NodeJS bindings via node-ffi.",
    "main": "go-node-ffi.js",
    "private": true,
    "engines": {
        "node": ">=14.16"
    },
    "dependencies": {
        "ffi-napi": "^4.0.3",
        "ref-napi": "^3.0.2",
        "ref-struct-di": "^1.1.1"
    },
    "devDependencies": {
        "prettier": "^2.3.0"
    },
    "scripts": {
        "build": "go build -buildmode=c-shared -o go-node-ffi.so",
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "GODEBUG=cgocheck=0 node go-node-ffi.js",
        "fmt": "prettier --write *.js && prettier --parser json --write *.json .prettierrc"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MrSaints/go-node-ffi.git"
    },
    "author": "Ian Lai <os@fyianlai.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/MrSaints/go-node-ffi/issues"
    },
    "homepage": "https://github.com/MrSaints/go-node-ffi#readme"
}
